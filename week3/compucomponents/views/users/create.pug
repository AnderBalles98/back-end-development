extends ../layout

block content
    a(href="/users") volver
    br
    br
    br
    h1 Nuevo Usuario
    br
    br
    form(action="/users/create" method="post")
        .form-group
            label(for="nombre") Nombre:
            input#nombre.form-control(type="text" name="nombre" value= usuario.nombre class=errors.nombre ? "is-invalid" : "")
            if errors.nombre
                small#nombreHelp.text-danger= errors.nombre.message
        .form-group
            label(for="email") Email:
            input#email.form-control(type="email" name="email" value= usuario.email class=errors.email ? "is-invalid" : "")
            if errors.email
                small#emailHelp.text-danger= errors.email.message
        .form-group
            label(for="password") Contraseña:
            input#password.form-control(type="password" name="password" class=errors.password ? "is-invalid" : "")
            if errors.password
                small#passwordHelp.text-danger= errors.password.message
        .form-group
            label(for="passwordC") Confirma la contraseña:
            input#passwordC.form-control(type="password" name="passwordC" class=errors.passwordC ? "is-invalid" : "")
            if errors.passwordC
                small#passwordCHelp.text-danger= errors.passwordC.message
        br
        br
        input.btn.btn-primary(type="submit" value="CREAR")